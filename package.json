{
  "name": "hotel-app-backend",
  "version": "1.0.0",
  "description": "Backend API for Hotel Management System",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "npm run clean && npx tsc --noEmit false",
    "clean": "npx rimraf dist || rm -rf dist || rmdir /s /q dist",
    "postbuild": "echo 'Build completed successfully'",
    "vercel-build": "npm run build",
    "vercel-dev": "vercel dev"
  },
  "keywords": [
    "hotel",
    "management",
    "api",
    "nodejs",
    "typescript",
    "mongodb"
  ],
  "author": "Sadam Hussain",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "@types/node": "^24.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
